<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MapViewSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:popupBackground">@drawable/round_shape</item>
    </style>
    <style name="RoundButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_shape</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="backgroundTint">@color/colorTertiary</item>
    </style>

    <style name="MapBottomNavigationView">
        <item name="android:background">@color/colorTertiaryAccent</item>
        <item name="itemIconSize">0dp</item>
        <item name="itemTextColor">@color/bottom_navigation_view_text_color</item>
        <item name="itemPaddingBottom">20dp</item>
        <item name="itemTextAppearanceActive">@style/MapBottomNavigationView_ItemTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/MapBottomNavigationView_ItemTextAppearanceInactive</item>
    </style>

    <style name="MapBottomNavigationView_ItemTextAppearanceActive">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MapBottomNavigationView_ItemTextAppearanceInactive">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>