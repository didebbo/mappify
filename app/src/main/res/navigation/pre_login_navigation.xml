<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/loginPage"
    android:id="@+id/pre_login_navigation">

    <fragment android:name="com.didebbo.mappify.presentation.fragment.destination.LoginPage"
        android:id="@+id/loginPage"
        tools:layout="@layout/login_page_layout">
        <action
            android:id="@+id/navigate_from_loginPage_to_registerPage"
            app:destination="@id/registerPage"
            />
    </fragment>

    <fragment android:name="com.didebbo.mappify.presentation.fragment.destination.RegisterPage"
        android:id="@+id/registerPage"
        tools:layout="@layout/register_page_layout">
        <action
            android:id="@+id/navigate_from_registerPage_to_loginPage"
            app:destination="@id/loginPage"
            />
    </fragment>

</navigation>